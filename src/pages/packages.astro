---
import Layout from '../layouts/Layout.astro';
import PackageCard from '../components/PackageCard.astro';
import AnimatedBackground from '../components/AnimatedBackground';

export const packages = [
  {
    name: 'Dolphin CLI',
    description: 'A powerful command-line interface to boost your Flutter development workflow.',
    image: '/dolphin.svg',
    pubDevUrl: 'https://pub.dev/packages/dolphin_cli',
    githubUrl: 'https://github.com/rkishan516/dolphin_cli',
    docsUrl: 'https://dolphin.goflutter.in/',
  },
  {
    name: 'Flexible Text',
    description: 'A flexible text widget for Flutter that adapts to various content and layout requirements.',
    image: '/dart.png',
    pubDevUrl: 'https://pub.dev/packages/flexible_text',
    githubUrl: 'https://github.com/rkishan516/flexible_text'
  },
  {
    name: 'Whiteboard',
    description: 'A customizable whiteboard widget for Flutter applications.',
    image: '/dart.png',
    pubDevUrl: 'https://pub.dev/packages/whiteboard',
    githubUrl: 'https://github.com/rkishan516/whiteboard'
  },
  {
    name: 'Scoped Zone',
    description: 'A Flutter package for managing scoped dependencies and state.',
    image: '/dart.png',
    pubDevUrl: 'https://pub.dev/packages/scoped_zone',
    githubUrl: 'https://github.com/rkishan516/scoped_zone'
  }
];
---

<Layout title="Packages">
  <AnimatedBackground client:load />
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <h1 class="text-3xl font-extrabold text-white sm:text-4xl">
        Flutter Packages
      </h1>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-400 sm:mt-4">
        Discover our collection of Flutter packages designed to solve common development challenges
      </p>
    </div>
    <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {packages.map(pkg => <PackageCard package={pkg} />)}
    </div>
  </div>
</Layout>